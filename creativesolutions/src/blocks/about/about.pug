//-
    name: about
    description: Markup for the about block
    arguments:
        - {object} props - block properties

mixin about(data = {})
    .about&attributes(attributes)
        .container
            .row
                .col-lg-4.col-md-6.col-12
                    .about__panel
                        img(src=data.img, alt="").about__img
                        +title(data).about__title
                .col-lg-7.offset-lg-1.col-md-6.col-12
                    .about__content
                        each item in data.text
                            p.about__text!= item
                        .about__btn
                            +btn(data.btn, "dark")